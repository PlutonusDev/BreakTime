{
  "name": "breaktime",
  "productName": "Break Time",
  "version": "1.0.3",
  "description": "A roster and shift manager for workplaces.",
  "license": "GPL-3.0",
  "main": "src/app.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PlutonusDev/BreakTime.git"
  },
  "author": "PlutonusDev <plutonus.stream@gmail.com>",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "lint": "xo",
    "test": "echo No test",
    "pack": "electron-builder src --dir",
    "dist": "electron-builder src --windows",
    "release": "np",
    "start": "electron ."
  },
  "dependencies": {
    "@types/socket.io-client": "^1.4.32",
    "bcrypt": "^3.0.6",
    "electron-context-menu": "^0.12.1",
    "electron-debug": "^3.0.0",
    "electron-store": "^3.3.0",
    "electron-unhandled": "^2.2.0",
    "electron-updater": "^4.0.6",
    "electron-util": "^0.12.0",
    "express": "^4.17.1",
    "http": "0.0.0",
    "jquery": "^3.5.0",
    "moment": "^2.24.0",
    "moment-duration-format": "^2.3.2",
    "snekfetch": "^4.0.4",
    "socket.io": "^2.2.0",
    "sqlite": "^3.0.3"
  },
  "devDependencies": {
    "electron": "^5.0.4",
    "electron-builder": "^20.43.0",
    "np": "^5.0.3",
    "xo": "^0.24.0"
  },
  "xo": {
    "envs": [
      "node",
      "browser"
    ]
  },
  "np": {
    "publish": false,
    "releaseDraft": false
  },
  "build": {
    "appId": "com.plutonusdev.BreakTime",
    "mac": {
      "category": "public.app-category.social-networking",
      "darkModeSupport": true
    },
    "dmg": {
      "iconSize": 160,
      "contents": [
        {
          "x": 180,
          "y": 170
        },
        {
          "x": 480,
          "y": 170,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Network;Chat"
    }
  },
  "bugs": {
    "url": "https://github.com/PlutonusDev/BreakTime/issues"
  },
  "homepage": "https://github.com/PlutonusDev/BreakTime#readme"
}
